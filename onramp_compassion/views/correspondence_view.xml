<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Add column last_read and read_count in the tree view sponsorship_correspondance -->
        <record id="view_correspondence_tree_compassion" model="ir.ui.view">
            <field name="name">correspondence.tree</field>
            <field name="model">correspondence</field>
            <field name="inherit_id" ref="sbc_compassion.view_correspondence_tree" />
            <field name="arch" type="xml">
                <field name="status_date" position="after">
                    <field name="last_read" />
                    <field name="read_count" />
                </field>
            </field>
        </record>
        
        <!-- Add last_read and read_count in form view -->
        <record id="view_correspondence_form_compassion" model="ir.ui.view">
            <field name="name">correspondence.form</field>
            <field name="model">correspondence</field>
            <field name="inherit_id" ref="sbc_compassion.view_correspondence_form" />
            <field name="arch" type="xml">
                <field name="rework_comments" position="after">
                    <field name="last_read" />
                    <field name="read_count" />
                </field>
                <header>
                    <button name="download_attach_letter_image" type="object" string="Reload image" states="Published to Global Partner"/>
                    <button name="attach_original" type="object"
                            string="Replace by original"
                            states="Published to Global Partner"/>
                </header>
            </field>
        </record>

        <!-- Extends the search on sponsorship correspondence with filter unread -->
        <record id="correspondence_view_search_compassion" model="ir.ui.view">
            <field name="name">correspondence.search</field>
            <field name="model">correspondence</field>
            <field name="inherit_id" ref="sbc_compassion.correspondence_view_search" />
            <field name="arch" type="xml">
                <search>
                    <separator />
                    <filter name="unread" string="Unread" domain="[('last_read','=',False)]" />
                </search>
            </field>
        </record>

        <!-- Extends action by add a default search on state unread -->
        <record id="sbc_compassion.action_compassion_correspondence_form" model="ir.actions.act_window">
            <field name="context">{'search_default_state_published':1, 'search_default_unread':1,}</field>
        </record>
    </data>
</openerp>
