<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- Top menu item -->
		<menuitem name="Sponsorship"
	              id="menu_sponsorship_root"
	              groups="group_sponsorship"
	              sequence="5"/>
		<menuitem id="menu_sponsorship_section" parent="menu_sponsorship_root" name="Sponsorship" sequence="1"/>

        <!--Compassion child form view -->
        <record id="view_compassion_child_form" model="ir.ui.view">
            <field name="name">compassion.child.form</field>
            <field name="model">compassion.child</field>
            <field name="arch" type="xml">
                <form string="Child">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="N,P,F" />
                    </header>
                    <sheet>
                        <field name="portrait" widget='image' class="oe_left oe_avatar" options='{"size": [90, 90]}' />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                            <div class="oe_inline">
                                <label for="firstname"/>
                                <field name="firstname"/>
                                <label for="preferred_name"/>
                                <field name="preferred_name"/>
                            </div>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button name="get_infos" string="get info" type="object" icon="fa-refresh" class="oe_stat_button"/>
                        </div>
                        <notebook>
                            <page string="General Information">
                                <group>
                                    <group>
                                        <field name="local_id"/>
                                        <field name="project_id"/>
                                        <field name="gender"/>
                                        <field name="birthdate"/>
                                        <field name="estimated_birthdate"/>
                                        <field name="sponsor_id"/>
                                        <field name="beneficiary_state"/>
                                        <field name="hold_id"/>
                                    </group>
                                    <group>
                                        <field name="global_id"/>
                                        <field name="type"/>
                                        <field name="cdsp_type"/>
                                        <field name="date"/>
                                        <field name="completion_date"/>
                                        <field name="completion_date_change_reason" attrs="{'invisible': [('completion_date_change_reason', '=', False)]}"/>
                                        <field name="exit_reason" attrs="{'invisible': [('state', '!=', 'F')]}"/>
                                    </group>
                                    <group attrs="{'invisible': [('delegated_to', '=', False)]}">
                                        <field name="delegated_to"/>
                                        <field name="date_delegation"/>
                                        <field name="delegated_comment"/>
                                    </group>
                                    <group colspan="2">
                                        <field name="pictures_ids">
                                            <tree string="date of pictures">
                                                <field name="date"/>
                                            </tree>
                                        </field>
                                    </group>
                                </group>
                            </page>
                            <page string="Lifecycle Events">
                                <label for="lifecycle_ids"/>
                                <field name="lifecycle_ids" context="{'default_child_id': active_id}">
                                    <tree>
                                        <field name="date"/>
                                        <field name="type"/>
                                    </tree>
                                </field>
                                <label for="assessment_ids"/>
                                <field name="assessment_ids" readonly="1">
                                    <tree>
                                        <field name="date"/>
                                        <field name="weight"/>
                                        <field name="height"/>
                                        <field name="physical_score"/>
                                        <field name="cognitive_score"/>
                                        <field name="spiritual_score"/>
                                        <field name="sociological_score"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Descriptions">
                                <group>
                                    <field name="desc_en" />
                                    <field name="desc_fr" />
                                    <field name="desc_de" />
                                    <field name="desc_it" />
                                </group>
                            </page>
                            <page string="Detailed Information">
                                <group>
                                    <group>
                                        <field name="last_review_date"/>
                                    </group>
                                    <group/>
                                    <group string="Activities">
                                        <field name="hobby_ids" widget="many2many_tags"/>
                                        <field name="christian_activity_ids" widget="many2many_tags"/>
                                        <field name="activity_ids" widget="many2many_tags"/>
                                    </group>
                                    <group string="Household">
                                        <field name="is_orphan"/>
                                        <field name="household_ids"/>
                                        <field name="duty_ids" widget="many2many_tags"/>
                                    </group>
                                    <group string="Education">
                                        <field name="education_level"/>
                                        <field name="not_enrolled_reason" attrs="{'invisible': [('education_level', '!=', 'Not Enrolled')]}"/>
                                        <field name="local_grade_level"/>
                                        <field name="us_grade_level"/>
                                        <field name="vocational_training_type"/>
                                        <field name="academic_performance" attrs="{'invisible': [('education_level', '=', 'Not Enrolled')]}"/>
                                        <field name="subject_ids" widget="many2many_tags" attrs="{'invisible': [('education_level', '=', 'Not Enrolled')]}"/>
                                        <field name="major_course_study" attrs="{'invisible': [('education_level', '=', 'Not Enrolled')]}"/>
                                        <field name="university_year" attrs="{'invisible': [('education_level', '!=', 'University Graduate')]}"/>
                                    </group>
                                    <group string="Health">
                                        <field name="cognitive_age_group"/>
                                        <field name="weight"/>
                                        <field name="height"/>
                                        <field name="chronic_illness_ids" widget="many2many_tags"/>
                                        <field name="physical_disability_ids" widget="many2many_tags"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="view_compassion_child_tree" model="ir.ui.view">
            <field name="name">compassion.child.tree</field>
            <field name="model">compassion.child</field>
            <field name="arch" type="xml">
                <tree string="Children"
                        colors="blue:state == 'N';
                    black:state in ('P', 'D', 'I');
                    red:state == 'R';
                    gray:state in ('F', 'X')">
                    <field name="name"/>
                    <field name="local_id"/>
                    <field name="date"/>
                    <field name="sponsor_id"/>
                    <field name="state"/>
                    <field name="delegated_to"/>
                    <field name="date_delegation"/>
                    <field name="date_end_delegation"/>
                    <field name="delegated_comment"/>
                </tree>
            </field>
        </record>

        <!-- Search view -->
        <record id="view_child_compassion_filter" model="ir.ui.view">
            <field name="name">compassion.child.select</field>
            <field name="model">compassion.child</field>
            <field name="arch" type="xml">
                <search string="Search child">
                    <field name="name" filter_domain="['|', ('name', 'ilike', self), ('firstname', 'ilike', self)]"/>
                    <field name="local_id"/>
                    <field name="sponsor_id"/>
                    <field name="sponsor_ref"/>
                    <field name="state"/>
                    <field name="type"/>
                    <filter name="available" string="Available" domain="[('state','in',('N','D','I','R','E'))]" context="{'group_by':'state'}"/>
                    <filter name="sponsored" string="Sponsored" domain="[('state','=','P')]" help="Sponsored children"/>
                    <filter name="departed" string="Departed" domain="[('state','=','F')]" help="Departed children"/>
                    <group expand="0" string="Group By...">
                        <filter string="Allocation Date" domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Lifecycle Events Form View -->
        <record id="view_child_lifecycle_form" model="ir.ui.view">
            <field name="name">compassion.child.ble.form</field>
            <field name="model">compassion.child.ble</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="type"/>
                            <field name="request_reason"/>
                            <field name="comments"/>
                        </group>
                        <group/>
                        <group attrs="{'invisible': [('type', '!=', 'Planned Exit')]}">
                            <field name="last_attended_project"/>
                            <field name="primary_school_finished"/>
                            <field name="confesses_jesus_savior"/>
                            <field name="final_letter_sent"/>
                        </group>
                        <group attrs="{'invisible': [('type', '!=', 'Planned Exit')]}">
                            <field name="sponsor_impact"/>
                            <field name="new_situation"/>
                            <field name="future_hopes"/>
                            <field name="family_impact"/>
                        </group>
                        <group attrs="{'invisible': [('type', '!=', 'Unplanned Exit')]}">
                            <field name="child_death_date"/>
                            <field name="child_death_circumstances"/>
                        </group>
                        <group attrs="{'invisible': [('type', '!=', 'Unplanned Exit')]}">
                            <field name="child_death_category"/>
                            <field name="child_death_subcategory"/>
                        </group>
                        <group attrs="{'invisible': [('type', '!=', 'Reinstatement/Return')]}">
                            <field name="other_reinstatement_reason"/>
                        </group>
                        <group attrs="{'invisible': [('type', '!=', 'Reinstatement/Return')]}"/>
                        <group attrs="{'invisible': [('type', '!=', 'Transfer')]}">
                            <field name="old_project_id"/>
                            <field name="transfer_arrival_date"/>
                            <field name="other_transfer_reason"/>
                        </group>
                        <group attrs="{'invisible': [('type', '!=', 'Transfer')]}"/>
                        <group attrs="{'invisible': [('type', '!=', 'Transition')]}">
                            <field name="transition_type"/>
                        </group>
                        <group attrs="{'invisible': [('type', '!=', 'Transition')]}"/>
                        <group attrs="{'invisible': [('type', '!=', 'Registration')]}">
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!-- Household Form View -->
        <record id="view_child_household_form" model="ir.ui.view">
            <field name="name">compassion.household.form</field>
            <field name="model">compassion.household</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="household_id"/>
                        </group>
                        <group/>
                        <group>
                            <field name="parents_together"/>
                            <field name="marital_status"/>
                            <field name="youth_headed_household"/>
                        </group>
                        <group/>
                        <group string="Father">
                            <field name="father_alive"/>
                            <field name="father_living_with_child"/>
                            <field name="male_guardian_job_type"/>
                            <field name="male_guardian_job"/>
                        </group>
                        <group string="Mother">
                            <field name="mother_alive"/>
                            <field name="mother_living_with_child"/>
                            <field name="female_guardian_job_type"/>
                            <field name="female_guardian_job"/>
                        </group>
                    </group>
                    <separator string="Members"/>
                    <field name="member_ids">
                        <tree>
                            <field name="name"/>
                            <field name="role"/>
                            <field name="is_primary_caregiver"/>
                            <field name="is_caregiver"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <!-- Action opening the tree view -->
        <record id="open_view_children_tree" model="ir.actions.act_window">
            <field name="name">Children</field>
            <field name="res_model">compassion.child</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_compassion_child_tree"/>
            <field name="context">{'search_default_available':1}</field>
        </record>

        <!-- Update child picture actions -->
        <record id="update_child_picture" model="ir.actions.server">
            <field name="name">Update picture</field>
            <field name="model_id" ref="model_compassion_child"/>
            <field name="state">code</field>
            <field name="code">self.update_child_pictures(cr, uid, context.get('active_ids', []), context=context)</field>
        </record>
        
        <record id="update_child_pictures" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'compassion.child'" name="model"/>
            <field name="name">Update pictures</field>
            <field eval="'ir.actions.server,%d'%update_child_picture" name="value"/>
        </record>

        <menuitem id="menu_sponsorship_children" parent="menu_sponsorship_section" name="Children" action="child_compassion.open_view_children_tree" sequence="2"/>

    </data>
</openerp>
